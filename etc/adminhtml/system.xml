<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="modules"
                   translate="label"
                   type="text"
                   sortOrder="1200"
                   showInDefault="1"
                   showInWebsite="0"
                   showInStore="0">
                <label>Modules</label>
                <field id="vendor_dir_name"
                       translate="label comment"
                       type="text"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1">
                    <label>Vendor Directory Name</label>
                    <comment>Directory name for the location of modules installed via Composer.</comment>
                    <validate>required-entry no-marginal-whitespace validate-no-html-tags</validate>
                </field>
                <field id="local_dir_name"
                       translate="label comment"
                       type="text"
                       sortOrder="20"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1">
                    <label>Local Module Directory Name</label>
                    <comment>Directory name for the location of modules installed locally.</comment>
                    <validate>required-entry no-marginal-whitespace validate-no-html-tags</validate>
                </field>
            </group>
        </section>
    </system>
</config>
